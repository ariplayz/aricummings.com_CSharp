                </Viewbox>
            </Button>
            <Button Content="Contact" DockPanel.Dock="Right" HorizontalAlignment="Stretch" Margin="0 0 0 0"/>
            <Button Content="Projects" DockPanel.Dock="Right" HorizontalAlignment="Stretch" Margin="0 0 0 0"/>
            <Button Content="Skills" DockPanel.Dock="Right" HorizontalAlignment="Stretch" Margin="0 0 0 0"/>
            <Button Content="About" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0 0 0 0"/>
        </DockPanel>
            <Rectangle Height="1" Fill="{DynamicResource SecondaryForeground}" HorizontalAlignment="Stretch"/>
            
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <DockPanel VerticalAlignment="Top" Margin="100 200 100 200">
                <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                    <TextBlock HorizontalAlignment="Left" FontSize="30" Text="&lt;/&gt;" Margin="0 0 0 40"></TextBlock>
                    <TextBlock HorizontalAlignment="Left" Foreground="{DynamicResource SecondaryForeground}" Margin="0 0 0 32">Hello, I'm Ari Cummings, a student at</TextBlock>
                    <TextBlock HorizontalAlignment="Left" Foreground="{DynamicResource SecondaryForeground}" Margin="0 0 0 32">The Delphian School</TextBlock>
                    
                    <TextBlock HorizontalAlignment="Left" Foreground="{DynamicResource HeaderTextBrush}" FontSize="65" Classes="bold">Open Source</TextBlock>
                    <TextBlock HorizontalAlignment="Left" FontSize="65" Margin="0 0 0 32" Classes="bold">Developer</TextBlock>
                    
                    <TextBlock Foreground="{DynamicResource SecondaryForeground}">Passionate high school developer specializing in C#, C++, and </TextBlock>
                    <TextBlock Foreground="{DynamicResource SecondaryForeground}">web technologies. Building innovative solutions and </TextBlock>
                    <TextBlock Foreground="{DynamicResource SecondaryForeground}">contributing to open source projects.</TextBlock>
                    
                    <Button Margin="0 40" Click="GithubButton2" Foreground="White" Background="{DynamicResource HeaderTextBrush}">
                        <StackPanel Margin="10" Orientation="Horizontal" Classes="transparent">
                        <Label Margin="0" HorizontalAlignment="Left" Classes="transparent">View My work</Label>
                        <Viewbox Width="25" Height="25" Stretch="Uniform" HorizontalAlignment="Right" Margin="10 0 0 0">
                            <Path Fill="White" Data="M48.854 0C21.839 0 0 22 0 49.217c0 21.756 13.993 40.172 33.405 46.69 2.427.49 3.316-1.059 3.316-2.362 0-1.141-.08-5.052-.08-9.127-13.59 2.934-16.42-5.867-16.42-5.867-2.184-5.704-5.42-7.17-5.42-7.17-4.448-3.015.324-3.015.324-3.015 4.934.326 7.523 5.052 7.523 5.052 4.367 7.496 11.404 5.378 14.235 4.074.404-3.178 1.699-5.378 3.074-6.6-10.839-1.141-22.243-5.378-22.243-24.283 0-5.378 1.94-9.778 5.014-13.2-.485-1.222-2.184-6.275.486-13.038 0 0 4.125-1.304 13.426 5.052a46.97 46.97 0 0 1 12.214-1.63c4.125 0 8.33.571 12.213 1.63 9.302-6.356 13.427-5.052 13.427-5.052 2.67 6.763.97 11.816.485 13.038 3.155 3.422 5.015 7.822 5.015 13.2 0 18.905-11.404 23.06-22.324 24.283 1.78 1.548 3.316 4.481 3.316 9.126 0 6.6-.08 11.897-.08 13.526 0 1.304.89 2.853 3.316 2.364 19.412-6.52 33.405-24.935 33.405-46.691C97.707 22 75.788 0 48.854 0z"></Path>
                        </Viewbox>
                        </StackPanel>
                    </Button>
                </StackPanel>
                    
                    
                    <Grid>
                        <Border x:Name="ImageCard"
                                Width="520" Height="420"
                                CornerRadius="16"
                                ClipToBounds="True"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="#111827">
                    <Grid>

                      <Image Source="/../Assets/hero-coding.jpg" Stretch="UniformToFill" />
    
                      <Rectangle Opacity="0.28">
                             <Rectangle.Fill>
                              <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                               <GradientStop Color="#7C3AED" Offset="0.0"/>
                               <GradientStop Color="#06B6D4" Offset="1.0"/>
                           </LinearGradientBrush>
                         </Rectangle.Fill>
                       </Rectangle>
                   </Grid>
                 </Border>
    
                        <Border x:Name="Float1Border"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,20,50,0"
                                Background="#05153d"
                                Opacity="0.98"
                                CornerRadius="8"
                                Padding="10">
    
                            <Border.RenderTransform>
                                <TranslateTransform />
                            </Border.RenderTransform>
                            
                            <StackPanel Orientation="Horizontal" Spacing="8" Background="Transparent">
                                <TextBlock Text="&lt;/&gt;" FontSize="25" Foreground="White" VerticalAlignment="Center" Background="Transparent"/>
                            </StackPanel>
                        </Border>
                        <Border x:Name="Float2Border"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Margin="50,0,0 20"
                                Background="#05153d"
                                Opacity="0.98"
                                CornerRadius="8"
                                Padding="10">
                            <Border.RenderTransform>
                                <TranslateTransform />
                            </Border.RenderTransform>

                            <StackPanel Orientation="Horizontal" Spacing="8" Background="Transparent">
                                <Viewbox Width="35" Height="35" Stretch="Uniform" HorizontalAlignment="Right">
                                    <Path Fill="White" Data="M48.854 0C21.839 0 0 22 0 49.217c0 21.756 13.993 40.172 33.405 46.69 2.427.49 3.316-1.059 3.316-2.362 0-1.141-.08-5.052-.08-9.127-13.59 2.934-16.42-5.867-16.42-5.867-2.184-5.704-5.42-7.17-5.42-7.17-4.448-3.015.324-3.015.324-3.015 4.934.326 7.523 5.052 7.523 5.052 4.367 7.496 11.404 5.378 14.235 4.074.404-3.178 1.699-5.378 3.074-6.6-10.839-1.141-22.243-5.378-22.243-24.283 0-5.378 1.94-9.778 5.014-13.2-.485-1.222-2.184-6.275.486-13.038 0 0 4.125-1.304 13.426 5.052a46.97 46.97 0 0 1 12.214-1.63c4.125 0 8.33.571 12.213 1.63 9.302-6.356 13.427-5.052 13.427-5.052 2.67 6.763.97 11.816.485 13.038 3.155 3.422 5.015 7.822 5.015 13.2 0 18.905-11.404 23.06-22.324 24.283 1.78 1.548 3.316 4.481 3.316 9.126 0 6.6-.08 11.897-.08 13.526 0 1.304.89 2.853 3.316 2.364 19.412-6.52 33.405-24.935 33.405-46.691C97.707 22 75.788 0 48.854 0z"></Path>
                                </Viewbox>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                </DockPanel>
            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
