<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:aricummings.com"
             x:Class="aricummings.com.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/AppDefaultStyles.axaml"></StyleInclude>
    </Application.Styles>
             
             <Application.Resources>
                 <SolidColorBrush x:Key="PrimaryBackground">#020817</SolidColorBrush>
                 <SolidColorBrush x:Key="PrimaryHeaderBackground">#020817</SolidColorBrush>
                 <SolidColorBrush x:Key="PrimaryForeground">#f8fafc</SolidColorBrush>
                 <LinearGradientBrush x:Key="HeaderTextBrush" StartPoint="0%, 0%" EndPoint="100%, 0%">
                     <GradientStop Offset="0" Color="#11f7f8"></GradientStop>
                     <GradientStop Offset="1" Color="#96b7c4"></GradientStop>
                 </LinearGradientBrush>
                 
                 <SolidColorBrush x:Key="PrimaryHoverBackground">#041132</SolidColorBrush>
                 <SolidColorBrush x:Key="PrimaryHoverForeground">White</SolidColorBrush>
                 
                 
                 <FontFamily x:Key="AkkoPro">/Assets/Fonts/Akko-Pro-Regular.ttf#Akko Pro</FontFamily>
                 <FontFamily x:Key="AkkoProBold">/Assets/Fonts/Akko-Pro-Bold.ttf#Akko Pro</FontFamily>
                 <FontFamily x:Key="Phosphor">/Assets/Fonts/Phosphor.ttf#Phosphor</FontFamily>
                 <FontFamily x:Key="PhosphorFill">/Assets/Fonts/Phosphor-Fill.ttf#Phosphor-Fill</FontFamily>
                 <FontFamily x:Key="JetBrainsMono">/Assets/Fonts/JetBrainsMono-Regular.ttf#JetBrains Mono</FontFamily>
                 
                 
             </Application.Resources>

             
</Application>